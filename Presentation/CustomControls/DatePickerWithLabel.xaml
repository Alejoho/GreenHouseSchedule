<UserControl x:Class="Presentation.CustomControls.DatePickerWithLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.CustomControls"
             mc:Ignorable="d" 
            d:DesignHeight="26" d:DesignWidth="300">
    <Grid>
        <DockPanel  Margin="0 0 0 0">
            <TextBlock Grid.Column="0" Text="{Binding Path=FieldLabel}" VerticalAlignment="Center" 
                Margin="0 0 5 0" DockPanel.Dock="Left" HorizontalAlignment="Right" x:Name="Label"/>

            <DatePicker Grid.Column="1" Text="{Binding Path=FieldContent}" VerticalContentAlignment="Center"
                 HorizontalAlignment="Stretch" Padding="5 0 0 0" Margin="0 3" DockPanel.Dock="Left"
                 Width="150" x:Name="TextBox"/>
        </DockPanel>
    </Grid>
</UserControl>