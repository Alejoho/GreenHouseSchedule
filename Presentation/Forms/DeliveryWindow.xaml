<Window x:Class="Presentation.Forms.DeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation.Forms"
        mc:Ignorable="d"
        Title="Entregas pendientes" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" x:Name="dgDeliveryList" Height="300" Margin="20 30 20 0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="150 10 0 0" Height="50">
            <Button x:Name="btnDeliver" Content="Entregar" Margin="20 12" Width="80"/>
            <Button x:Name="btnCancel" Content="Atrás" Margin="20 12" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
